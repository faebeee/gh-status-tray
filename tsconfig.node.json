{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/shared/**/*",
    "lib/**/*"

  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "types": [
      "electron-vite/node"
    ],
    "paths": {
      "@shared/*": [
        "./src/shared/*"
      ]
    }
  }
}
